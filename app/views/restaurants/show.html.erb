<h2><%= @restaurant.name %></h2>
<p> Address <%= @restaurant.address %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<p>
  <strong>Review:</strong>
    <% if @restaurant.reviews.empty? %>
  <h3>You can add a review</h3>
<% else %>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li style="list-style: none;">
        <%= review.content %>
      </li>
      <li style="list-style: none;">
        <%= review.rating %>
      </li>
    <% end %>
  </ul>
<% end %>
</p>



<h3><%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %> |
<%= link_to 'Add Review', new_restaurant_review_path(@restaurant) %> </h3>

